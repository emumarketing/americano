module.exports = class <%= name %>Controller extends BaseController

  constructor: (@app) ->
    super(@app)
    @io = require('socket.io').listen(@app)
    @on()

  on: =>
    @io
    .of('/<%= name.toLowerCase() %>')
    .on 'connection', (socket) =>
      console.log "Connection verified..."
      @helloworld(socket)
