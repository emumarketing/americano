module.exports = (app, controllers) ->
  loadUser = controllers.session.loadUser

  app.get '/{{lowercase name}}/*', (req, res, next) ->
    loadUser(req, res, next)

  app.get "/{{lowercase name}}/home", (req, res) ->
    controllers.{{lowercase name}}.action_home(req, res)
  
  app.get "/{{lowercase name}}", (req, res) ->
    res.redirect '/{{lowercase name}}/home'

  
