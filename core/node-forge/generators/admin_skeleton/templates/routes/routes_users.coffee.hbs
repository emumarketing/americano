module.exports = (app, controllers) ->

  app.get "/{{lowercase name}}/users/:page([0-9]+)?", (req, res) ->
    controllers.{{lowercase name}}.action_users_index(req, res)
  
  app.get "/{{lowercase name}}/users/create", (req, res) ->
    controllers.{{lowercase name}}.action_users_create(req, res)
  
  app.post "/{{lowercase name}}/users/new", (req, res) ->
    controllers.{{lowercase name}}.action_users_new(req, res)
  
  app.get "/{{lowercase name}}/users/edit/:username", (req, res) ->
    controllers.{{lowercase name}}.action_users_edit(req, res)
  
  app.post "/{{lowercase name}}/users/update/:username", (req, res) ->
    controllers.{{lowercase name}}.action_users_update(req, res)

  app.get "/{{lowercase name}}/users/delete/:username", (req, res) ->
    controllers.{{lowercase name}}.action_users_delete(req, res)
  
  app.get "/{{lowercase name}}/users/search/:page([0-9]+)?", (req, res) ->
    controllers.{{lowercase name}}.action_users_search(req, res)


